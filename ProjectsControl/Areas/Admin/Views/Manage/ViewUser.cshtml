@using Microsoft.AspNetCore.Identity;
@model IdentityUser

@{
    ViewData["Title"] = $"Información Usuario {Model.UserName} ";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}


<h2>
    Ver Usuario
</h2>
<p>
    Ver información del usuario 
</p>
<table class="table table-primary">
    <thead>        
    </thead>
    <tbody>
        <tr>
            <th>
                Nombre de usuario
            </th>
            <td>
                @Model.UserName
            </td>
        </tr>
        <tr>
            <th>
                Correo
            </th>
            <td>
                @Model.Email
            </td>
        </tr>
        <tr>
            <th>
                Número de Telefono
            </th>
            <td>
                @Model.PhoneNumber
            </td>
        </tr>
        <tr>
            <th>
                Cantidad de inicios de Sesión Fallidos
            </th>
            <td>
                @Model.AccessFailedCount
            </td>
        </tr>
    </tbody>
</table>