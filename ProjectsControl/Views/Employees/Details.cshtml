@model ProjectsControl.Models.Employee

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Employee</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateofHiring)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateofHiring)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Position)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Position)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.EmployeeId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>



<div>
    <h2>
        Historial de Acciones de Personal Registradas
    </h2>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Titulo
                </th>
                <th>
                    Fecha Creación
                </th>
                <th>
                    Autor
                </th>
                <th>
                    Tipo
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.actions)
            {
                <tr>
                    <td>
                        @item.Title
                    </td>
                    <td>
                        @item.DateOfCreation
                    </td>
                    <td>
                        @item.Author
                    </td>
                    <td>
                        @item.TypeOfAction
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ActionId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ActionId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ActionId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>