@model ProjectsControl.Models.Offer

@{
    ViewData["Title"] = $"Detales Oferta {Model.NumberOfOffer}";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalles de la oferta</h1>


<div>
    <h4>Offer</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Numero de Oferta
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumberOfOffer)
        </dd>
        <dt class = "col-sm-2">
            Titulo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            Tipo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class = "col-sm-2">
            Descripción
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Autor
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Author)
        </dd>
        <dt class = "col-sm-2">
            Vendedor
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SaleManName)
        </dd>
        <dt class = "col-sm-2">
            Fecha de Creación
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateOfCreation)
        </dd>
        <dt class = "col-sm-2">
            Fecha de Modificación
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastEdition)
        </dd>
        <dt class = "col-sm-2">
            Cliente
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Customer.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.OfferId" class="btn btn-primary">Editar</a> |
    <a asp-action="Index" class="btn btn-secondary">Volver Atrás</a>
</div>
