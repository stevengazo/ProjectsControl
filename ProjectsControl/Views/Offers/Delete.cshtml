@model ProjectsControl.Models.Offer

@{
    ViewData["Title"] = "Borrar Oferta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Borrar Oferta</h1>

<h3>Are you sure you want to delete this?</h3>
<h3>
    ¿Seguro que desea eliminar esta oferta?
</h3>
<div>
    <h4>Offer</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Numero de oferta
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumberOfOffer)
        </dd>
        <dt class = "col-sm-2">
            Titulo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            Tipo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class = "col-sm-2">
            Descripción
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Autor
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Author)
        </dd>
        <dt class = "col-sm-2">
            Vendedor
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SaleManName)
        </dd>
        <dt class = "col-sm-2">
            Fecha de Creación
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateOfCreation)
        </dd>
        <dt class = "col-sm-2">
            Última Edición
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastEdition)
        </dd>
        <dt class = "col-sm-2">
            Cliente
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Customer.Name)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="OfferId" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Volver Atrás</a>
    </form>
</div>
