@model IEnumerable<ProjectsControl.Models.Saleman>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Busqueda de Vendedores</h2>

<div>
    <a asp-controller="Salemen" asp-action="Create">Registrar nuevo vendedor</a> | <a asp-controller="Salemen" asp-action="Index">Listar Vendedores</a>
</div>

<form asp-controller="Salemen" asp-action="Search" method="get">
    <label>Cedula</label>
    <input type="text" name="IdToSearch" />
    <label>Nombre</label>
    <input type="text" name="NameToSearch"/>
   <input type="submit" value="Buscar" />
</form>

<table class="table table-hover table-striped table-responsive-sm table-bordered" style="font-size: 13px;text-align:center">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Nombre
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody style="font-size: 12px;">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SalemanId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.SalemanId">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.SalemanId">Detalles</a> |
                    <a style="color:red" asp-action="Delete" asp-route-id="@item.SalemanId">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

