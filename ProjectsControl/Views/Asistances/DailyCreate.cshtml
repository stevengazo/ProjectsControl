@model List<Asistance>;

@{
    
}


<div class="flex-row align-content-center">
    <label>@ViewBag.ErrorMessage</label>
</div>

<form method="post">
    <table class="table">
        <thead>
            <tr>
                <td>
                    Empleado
                </td>
                <td>
                    Proyecto
                </td>
                <td>
                    Entrada
                </td>
                <td>
                    Salida
                </td>
                <td>
                    N°Semana
                </td>
            </tr>
        </thead>
        <tbody>
            @for (var i = 0; i < Model.Count; i++)
            {
                <!--Row-->
                <tr>
                    <td>
                        <!--Name-->
                    <label>
                            @Model[i].Employee.Name
                            <div class="disabled">
                                <input asp-for="@Model[i].EmployeeId" value="@Model[i].EmployeeId" readonly>
                            </div>

                        </label>
                    </td>
                    <td>
                        <!--Project-->
                    <select asp-for="@Model[i].ProjectId" class="form-control-sm">
                            @foreach (var item in ViewBag.Projects)
                            {
                                <option value="@item.Key">@item.Value</option>
                            }
                        </select>
                </td>
                <td>
                    <!--DateOfBegin-->
                    <input asp-for="@Model[i].DateOfBegin" class="form-control" />
                    
                </td>
                <td>
                    <!--DateOfEnd-->
                    <input asp-for="@Model[i].DateOfEnd" class="form-control" />
                </td>
                <td>
                    <!--Number Of Week-->
                     <select asp-for="@Model[i].WeekId" class ="form-control" asp-items="ViewBag.WeekId"></select>
                </td>
            </tr>
           }
        </tbody>
    </table>
    <div class="flex-row align-content-center">
        <input type="submit" value="Guardar" class="btn-primary"/>
    </div>
</form>