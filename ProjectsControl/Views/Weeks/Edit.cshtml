@model ProjectsControl.Models.Week

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Week</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="WeekId" />
            <div class="form-group">
                <label asp-for="NumberOfWeek" class="control-label"></label>
                <input asp-for="NumberOfWeek" class="form-control" />
                <span asp-validation-for="NumberOfWeek" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BeginOfWeek" class="control-label"></label>
                <input asp-for="BeginOfWeek" class="form-control" />
                <span asp-validation-for="BeginOfWeek" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndOfWeek" class="control-label"></label>
                <input asp-for="EndOfWeek" class="form-control" />
                <span asp-validation-for="EndOfWeek" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
