@model IEnumerable<ProjectsControl.Models.Week>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Lista de Semanas Registradas</h1>

<p>
    <a asp-action="Create">Registrar nueva semana</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfWeek)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BeginOfWeek)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndOfWeek)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfWeek)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BeginOfWeek)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndOfWeek)
            </td>
            <td>
                <a asp-action="ScheduleDetails" asp-route-id="@item.WeekId">Cronograma</a> |
                <a asp-action="Edit" asp-route-id="@item.WeekId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.WeekId">Detalles</a> |
                <a class="text-danger" asp-action="Delete" asp-route-id="@item.WeekId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
